</style>
<script src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
<script>
    function initialize() {
        var mapOptions = {
            center: new google.maps.LatLng(37.027833, -7.922726),
            zoom: 17,
            mapTypeId: google.maps.MapTypeId.SATELLITE
        };
        var map = new google.maps.Map(document.getElementById('map_canvas'), mapOptions);

        setMarkers(map, locais);
    }
    var locais = [
        ['University Female Student Resident', 37.028159, -7.924024, 12],
        ['University Foundation', 37.025557, -7.922087, 11],
        ['Insitute of Engineering (ISE)', 37.025797, -7.922723, 10],
        ['Technical Support Services', 37.026386, -7.923284, 9],
        ['Main Teaching Building', 37.026788, -7.921809, 8],
        ['Institute of Engineering (ISE)', 37.027683, -7.922576, 7],
        ['Institute of Engineering (ISE)', 37.028116, -7.922501, 6],
        ['Canteen/Social Services', 37.028574, -7.921964, 5],
        ['School of Education and Communication (ESEC)', 37.029174, -7.922318, 4],
        ['Academic Services', 37.029589, -7.9233, 3],
        ['School of Management, Hospitality and Tourism (ESGHT)', 37.029482, -7.923724, 2],
        ['Bank (Caixa Geral de Depósitos', 37.029169, -7.924024, 1]
    ];

    function setMarkers(map, locations) {
        for (var i = 0; i < locations.length; i++) {
            var local = locations[i];
            var myLatLng = new google.maps.LatLng(local[1], local[2]);
            var marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: local[0],
                zIndex: local[3]
            });
        }
    }
    google.maps.event.addDomListener(window, 'resize', initialize);
    google.maps.event.addDomListener(window, 'load', initialize);
</script>
<h2>Penha</h2>
<div id="map_canvas"></div>

