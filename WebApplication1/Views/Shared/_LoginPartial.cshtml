@using Microsoft.AspNet.Identity

@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "user", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    <ul class="nav navbar-nav">
        <li>
            @Html.ActionLink("User Stories", "Index", "story", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.Name + "!", "Edit", "user", new { sID = User.Identity.Name }, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Create", "user", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "user", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
